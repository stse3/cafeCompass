rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isFollowing(userId) {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/follows/$(request.auth.uid + '_' + userId));
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update, delete: if isOwner(userId);
    }
    
    // Cafes collection
    match /cafes/{cafeId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.createdBy == request.auth.uid;
    }
    
    // Check-ins collection
    match /checkIns/{checkInId} {
      allow read: if true || 
                     (resource.data.visibility == 'friends' && isFollowing(resource.data.userId)) ||
                     (resource.data.visibility == 'private' && isOwner(resource.data.userId));
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Favorites collection
    match /favorites/{favoriteId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Follows collection
    match /follows/{followId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.followerId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.followerId == request.auth.uid;
    }
    
    // Meetups collection
    match /meetups/{meetupId} {
      allow read: if resource.data.visibility == 'public' ||
                     (resource.data.visibility == 'friends' && isFollowing(resource.data.hostId)) ||
                     isOwner(resource.data.hostId) ||
                     request.auth.uid in resource.data.attendees;
      allow create: if isAuthenticated() && request.resource.data.hostId == request.auth.uid;
      allow update: if isAuthenticated() && 
                       (resource.data.hostId == request.auth.uid ||
                        request.auth.uid in request.resource.data.attendees);
      allow delete: if isAuthenticated() && resource.data.hostId == request.auth.uid;
    }
    
    // Schedules collection
    match /schedules/{scheduleId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || resource.data.isPublic == true);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Work Buddy Matches collection
    match /workBuddyMatches/{matchId} {
      allow read: if isAuthenticated() && request.auth.uid in resource.data.users;
      allow create: if isAuthenticated() && 
                       request.resource.data.requestedBy == request.auth.uid &&
                       request.auth.uid in request.resource.data.users;
      allow update: if isAuthenticated() && request.auth.uid in resource.data.users;
      allow delete: if isAuthenticated() && request.auth.uid in resource.data.users;
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
  }
}